<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/input_et"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/infer_btn"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/input_et"
        android:id="@+id/infer_btn"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Infer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/pred_tv"
        app:layout_constraintTop_toBottomOf="@id/input_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        style="@style/TextAppearance.AppCompat.Large"
        tools:text="Predicted Value: 10.99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>